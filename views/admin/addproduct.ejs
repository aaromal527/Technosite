<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Product</title>
  <!-- Include Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
    <link rel="icon" href="https://png.pngtree.com/png-vector/20211013/ourmid/pngtree-letter-t-logo-png-image_3977406.png" type="image/x-icon">
</head>

<body>
  <%-include('navbar')%>

    <br>
    <center>
      <h3 class="mb-5 mt-5 pl-5 ml-5  pb-2" justifycontent="center"> Add New Products </h3>
    </center>
    <form class="mx-1 mx-md-4  pb-5 " action="/addproduct" method="post" onsubmit="return checkAll()"
      enctype="multipart/form-data">

      <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
          <input type="text" name="productname" id="form3Example1c" class="form-control" required>
          <label class="form-label" for="form3Example1c">Product Name</label>
        </div>
      </div>

      <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
          <input type="number" name="productprice" id="productprice" class="form-control" required>
          <label class="form-label" onchange="CheckPrice()" for="form3Example3c">Price</label>
        </div>
      </div>

      <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
          <input type="number" name="stock" id="productstock" class="form-control" required>
          <label class="form-label" onchange="CheckStock()" for="form3Example4c">Stock</label>
        </div>
      </div>
      <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
          <input type="text" name="productdescription" id="form3Example1c" class="form-control" required>
          <label class="form-label" for="form3Example1c">Product description</label>
        </div>
      </div>
      <select class="form-select " aria-label="Default select example" name="categoryname" id="categoryname"
        style="margin-left: 15px ;">
        <option selected>Select Category</option>
        <br>


        <% for(let i=0;i<categoryname.length;i++){%>
          <option value="<%=categoryname[i].categoryname %>">
            <%=categoryname[i].categoryname %>
          </option>
          <%} %>
      </select>
      <br>
      <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
          <input type="file" name="productImage" id="productImage" accept="image/*"  class="form-control" multiple required>
          <label class="form-label" for="form3Example1c">Product Image</label>
        </div>
      </div>


      <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
        <button type="submit" class="btn btn-primary btn-lg" onclick="CheckPrice()">Submit</button>
      </div>

    </form>
    <script>

      function CheckPrice() {
        let price = document.getElementById('productprice').value;
        if (price < 0) {
          alert('Price cannot be less than zero');
          return false;
        } else {
          return true;
        }
      }
      function CheckStock() {
        let stock = document.getElementById('productstock').value;
        if (stock < 0) {
          alert('Stock cannot be less than zero');
          return false;
        } else {
          return true;
        }
      }

      function checkAll() {
        if (CheckPrice() && CheckStock()) {
          return true;
        } else {
          return false;
        }
      }
    </script>
</body>

</html>