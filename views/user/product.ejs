<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://unpkg.com/js-image-zoom@0.4.1/js-image-zoom.js" type="application/javascript"></script>
    <link rel="icon" href="https://png.pngtree.com/png-vector/20211013/ourmid/pngtree-letter-t-logo-png-image_3977406.png" type="image/x-icon">
</head>
<body>
    
    <%-include('navbaruser')%>
    <% if(locals.message){ %>
        <div class="alert alert-danger text-center"><%=message%></div>    
    <%}%>
  

    <!-- Product Details Container -->
    <% for(let i = 0; i < product.length; i++) { %>
    <div class="container mt-4">
        <div class="row">
            
            <!-- Product Image -->
            
            <div class="col-md-6" id="image" style="height: 300px; width: 300px;" >
                <img src="/static/uploads/<%= product[i].productimage %>" alt="Product Image" class="img-fluid"  >
            </div>
            <!-- Product Information -->
            <div class="col-md-6">
                <h2><%= product[i].productname %></h2>
                <p><%= product[i].productdescription %></p>
                <h5>Rs.<%= product[i].productprice %></h5>
                <br>
                
                
                <a href="/addtocart?productid=<%= product[i].productid %>" class="btn btn-primary ms-2"  >Add to Cart</a>

                
                
            </div>

         
        </div>
    </div>
    <% } %>
    <script>
        var options = {
            width: 350,
            zoomWidth: 350,
            offset: {vertical: 0, horizontal: 50}
        };
        new ImageZoom(document.getElementById("image"), options);
         
        </script>
    <!-- Include Bootstrap JS (at the end of the body for better performance) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <br>
    <br>
    <br>
    <br>    

    <%- include ('footer')%>

</body>
</html>
