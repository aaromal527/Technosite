<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Otp</title>
</head>
<body>
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4>OTP Verification</h4>
                    </div>
                    <div class="card-body">
                        <form action="/otp" method="post">
                            <div class="mb-3">
                                <label for="otpInput" class="form-label">Enter OTP</label>
                                <input type="number" class="form-control" id="otpInput" name="otp" placeholder="Enter OTP" maxlength="6" required >
                            </div>
                            <div class="text-center">
                                <button type="submit" id="btn" class="btn btn-primary">Verify OTP</button>
                            </div>
                            <br>
                            <div class="d-flex justify-content-center">
                                <p id="timerText">OTP expires in: <span id="countdown" style="color: black;">60</span> seconds</p>
                            </div> 
                            <div class="d-flex justify-content-center">
                                <a href="" id="link"  style="pointer-events: none;
                                cursor: default; text-decoration: none;" >Resend OTP</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</body>
<script>
    const inputField = document.getElementById('otpInput');
    const countdownElement = document.getElementById('countdown');
    const btn=document.getElementById('btn');
    const link=document.getElementById('link');
    const timerText=document.getElementById('timerText');
    
    let timeRemaining = 60;
    
    
    function updateCountdown() {
      countdownElement.textContent = timeRemaining;
    }
    
    
    function disableInputField() {
      inputField.disabled = true;
      btn.disabled=true;
      timerText.textContent="OTP expired.Click on resend otp to continue."
      link.style.pointerEvents='auto';
      link.style.cursor='pointer';
      
    }
    
    
    function startTimer() {
      const timerInterval = setInterval(() => {
        timeRemaining--;
        updateCountdown();
    
        if(timeRemaining < 10){
            countdownElement.style.color='red'
        }else{
            countdownElement.style.color='black'
        }
    
        if (timeRemaining <= 0) {
          clearInterval(timerInterval);
          disableInputField();
        }
      }, 1000);
    }
    
    // Start the timer when the page loads
    startTimer();
    
    </script>
</html>